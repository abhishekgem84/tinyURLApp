<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProfile name="default">
        <property name="APP_LOG" value="d:/logs/tinyurlapp" />
        <appender name="LOG-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- rollover daily -->
                <fileNamePattern>${APP_LOG}/%d{dd-MM-yyyy, aux}/log_%d{HH}.txt
				</fileNamePattern>

            </rollingPolicy>
            <encoder>
                <pattern>%d{dd-MMM-yyyy HH:mm:ss.SSS} [%-5level- %M - %L] %class{5}
					- %msg%ex{full}%n</pattern>
            </encoder>
        </appender>
        <appender name="ACCCESS-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- rollover daily -->
                <fileNamePattern>${APP_LOG}/%d{dd-MM-yyyy, aux}/access_%d{HH}.txt
				</fileNamePattern>

            </rollingPolicy>
            <encoder>
                <pattern>%d{dd-MMM-yyyy HH:mm:ss.SSS} [%-5level- %M - %L] %class{5}
					- %msg%ex{full}%n</pattern>
            </encoder>
        </appender>
        <appender name="REQ-RES-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- rollover daily -->
                <fileNamePattern>${APP_LOG}/%d{dd-MM-yyyy, aux}/req_res_%d{HH}.txt
				</fileNamePattern>

            </rollingPolicy>
            <encoder>
                <pattern>%d{dd-MMM-yyyy HH:mm:ss.SSS} [%-5level- %M - %L] %class{5}
					- %msg%ex{full}%n</pattern>
            </encoder>
        </appender>
    </springProfile>
    <springProfile name="docker">
        <property name="APP_LOG" value="d:/logs/tinyurlapp" />
        <appender name="LOG-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- rollover daily -->
                <fileNamePattern>${APP_LOG}/%d{dd-MM-yyyy, aux}/log_%d{HH}.txt
				</fileNamePattern>

            </rollingPolicy>
            <encoder>
                <pattern>%d{dd-MMM-yyyy HH:mm:ss.SSS} [%-5level- %M - %L] %class{5}
					- %msg%ex{full}%n</pattern>
            </encoder>
        </appender>
        <appender name="ACCCESS-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- rollover daily -->
                <fileNamePattern>${APP_LOG}/%d{dd-MM-yyyy, aux}/access_%d{HH}.txt
				</fileNamePattern>

            </rollingPolicy>
            <encoder>
                <pattern>%d{dd-MMM-yyyy HH:mm:ss.SSS} [%-5level- %M - %L] %class{5}
					- %msg%ex{full}%n</pattern>
            </encoder>
        </appender>
        <appender name="REQ-RES-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- rollover daily -->
                <fileNamePattern>${APP_LOG}/%d{dd-MM-yyyy, aux}/req_res_%d{HH}.txt
				</fileNamePattern>

            </rollingPolicy>
            <encoder>
                <pattern>%d{dd-MMM-yyyy HH:mm:ss.SSS} [%-5level- %M - %L] %class{5}
					- %msg%ex{full}%n</pattern>
            </encoder>
        </appender>
    </springProfile>
    <logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="DEBUG" additivity="false">
        <appender-ref ref="ACCCESS-FILE" />
    </logger>
    <logger name="org.request.response.logging" level="DEBUG" additivity="false">
        <appender-ref ref="REQ-RES-FILE" />
    </logger>
    <Logger name="org.hibernate.cache" level="debug" additivity="false">
        <appender-ref ref="LOG-FILE" />
    </Logger>
    <Logger name="org.ehcache" level="debug" additivity="false">
        <appender-ref ref="LOG-FILE" />
    </Logger>
    <root level="info">
        <appender-ref ref="LOG-FILE" />
    </root>
</configuration>